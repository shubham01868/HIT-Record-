<!DOCTYPE html>
<html>
<head>
  <title>HIT Record - Login</title>
  <style>
    body { font-family: Arial; padding: 20px; background: #f2f2f2; }
    form { background: white; padding: 20px; border-radius: 10px; box-shadow: 0 0 10px #ccc; max-width: 400px; margin: auto; }
    input, button { width: 100%; padding: 10px; margin: 8px 0; }
  </style>
</head>
<body>
  <h2>Login</h2>
  <form onsubmit="login(event)">
    <label>Patient Name:</label><br>
    <input type="text" id="name" required><br>
    <label>Date of Birth:</label><br>
    <input type="date" id="dob" required><br>
    <label>Password:</label><br>
    <input type="password" id="password" required><br>
    <button type="submit">Login</button>
  </form>

  <script>
    function login(e) {
      e.preventDefault();
      const name = document.getElementById('name').value;
      const dob = document.getElementById('dob').value;
      const password = document.getElementById('password').value;

      const users = JSON.parse(localStorage.getItem("users") || "[]");
      const user = users.find(u => u.name === name && u.dob === dob && u.password === password);

      if (user) {
        localStorage.setItem("loggedInUser", JSON.stringify(user));
        alert("Login successful!");
        window.location.href = "app.html"; // Next page
      } else {
        alert("Login failed! Please check details.");
      }
    }
  </script>
</body>
</html>
